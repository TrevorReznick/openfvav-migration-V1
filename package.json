{
  "name": "openfav-migration-pipeline",
  "version": "2.0.2",
  "description": "Professional Design System Hydration: Mapping V3/V4 to V6 Core",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "openfav-migrate": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "setup": "node src/cli.js setup",
    "validate": "node src/cli.js validate",
    "hydrate": "node src/cli.js hydrate",
    "hydrate:tokens": "node src/cli.js hydrate:tokens",
    "hydrate:dry": "node src/cli.js hydrate --dry-run",
    "migrate:components": "node src/cli.js migrate:components",
    "analyze": "node src/cli.js analyze",
    "restore": "node src/cli.js restore",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.js"
  },
  "dependencies": {
    "@babel/generator": "^7.24.0",
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.15",
    "postcss": "^8.4.35",
    "postcss-scss": "^4.0.9",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
